# FROM alpine:3.22.1
FROM alpine:3.20
RUN apk add --no-cache bind-tools ca-certificates chromium tzdata gettext \
    && apk --no-cache upgrade \
    && rm -rf /var/cache/apk/* \
    && adduser -D -g '' -s /bin/sh appuser

WORKDIR /app

COPY --chown=appuser:appuser katanam8 /usr/local/bin/
COPY --chown=appuser:appuser docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Set ownership of the app directory
RUN chown -R appuser:appuser /app

# Security: Switch to non-root user
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD katanam8 --help || exit 1

# Metadata
LABEL maintainer="i@deifzar.me" \
    version="1.0" \
    description="ASMM8 - Hardened Web Crawler Scanner (Runtime)" \
    security.scan="required-non-root-privileges"

# Use custom entrypoint for secret loading 
ENTRYPOINT ["docker-entrypoint.sh"]

CMD ["katanam8","launch"]